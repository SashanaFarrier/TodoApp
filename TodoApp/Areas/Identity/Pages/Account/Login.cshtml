@page
@model LoginModel

@{
    Layout = "_PortalLayout";

    ViewData["Title"] = "Log in Portal";
}

<section class="sign-in-form">
    <div class="d-flex flex-column flex-lg-row">
        <div class="col p-2 | sign-in-form-img-container">
            <div class="d-flex flex-column align-items-center justify-content-center h-100">
                <p class="fw-bolder fs-1">Stay on track.</p>
                <img src="~/isometric-outline-time-management-concept.png" />
            </div>
        </div>
        <div class="col | sign-in-form-container">
            <form id="account" method="post">
                <h2>Sign in.</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
               @*  <div class="checkbox mb-3">
