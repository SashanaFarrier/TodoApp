@page
@model RegisterModel
@{
    Layout = "_PortalLayout";

    ViewData["Title"] = "Register";
}

<section class="register-form | mt-3">
    <div class="d-flex flex-column flex-md-row justify-content-md-center h-100">
        <div class="col p-2 d-none d-md-block | register-form-img-container">
            <div class="d-flex flex-column align-items-center justify-content-center h-100">
                <p class="fw-bolder fs-1">Get Started Now.</p>
                <img src="~/isometric-outline-time-management-concept.png" />
            </div>
        </div>
        <div class="col | register-form-container">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center mb-4">Create a new account.</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="UserInfo.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Bob Jones" />
                    <label asp-for="UserInfo.Name">Name</label>
                    <span asp-validation-for="UserInfo.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="UserInfo.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="UserInfo.Email">Email</label>
                    <span asp-validation-for="UserInfo.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="UserInfo.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="UserInfo.Password">Password</label>
                    <span asp-validation-for="UserInfo.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="UserInfo.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="UserInfo.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="UserInfo.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg">Register</button>
                <div class="mt-4">
                    <p class="text-center">
                       Already have an account?
                        <a id="register-link" class="fs-6" asp-area="Identity" asp-page="/Account/Login">Sign in here</a>
                    </p>

                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
