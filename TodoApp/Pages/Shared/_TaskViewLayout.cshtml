<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="d-lg-none">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow p-3">
            <div class="container">
                <div class="col col-8">
                    <a class="navbar-brand d-inline-block" asp-area="" asp-page="/Index">
                        <div class="logo | d-flex align-items-center">
                            <img src="~/logo.png" alt="logo" />
                            <span class="fw-bold text-white ms-2">TaskApp<span class="colored-text">.</span></span>
                        </div>
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="text-white text-decoration-none nav-link" asp-area="" asp-page="/Dashboard">
                                <i class="fa-solid fa-grip-vertical"></i>
                                Dashboard
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="text-white text-decoration-none nav-link" asp-area="" asp-page="/TaskList/Index">
                                <i class="fa-solid fa-list-ul"></i>
                                Task List
                            </a>
                        </li>
                        <li class="active | nav-item">
                            <a class="text-white text-decoration-none nav-link" asp-area="" asp-page="/ProjectOverview">
                                <i class="fa-solid fa-bars-progress"></i>
                                Project Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="text-white text-decoration-none nav-link" asp-area="" asp-page="">
                                <i class="fa-solid fa-calendar-days"></i>
                                Calendar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="text-white text-decoration-none nav-link" asp-area="" asp-page="">
                                <i class="fa-solid fa-gear"></i>
                                Settings
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TodoApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>